<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    >


    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/Time"
        android:layout_below="@+id/Time"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Location"/>

    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/Date"
        android:layout_below="@+id/Date"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Time"/>

    <TextView
        android:id="@+id/Day"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_above="@+id/Time"
        android:layout_marginStart="126dp"
        android:layout_toEndOf="@+id/Location"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Day"/>

    <ImageView
        android:id="@+id/im_item_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/im_item_icon"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="TiTle"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/Title"
        android:layout_below="@+id/im_item_icon"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Date"/>

    <Button
        android:id="@+id/Navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:layout_below="@+id/Sendavailability"
        android:layout_alignEnd="@+id/Location"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/Viewteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="View Team"
        android:layout_above="@+id/maketeam"
        android:layout_alignStart="@+id/Navigate"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Sendavailability"
        android:layout_below="@+id/Location"
        android:layout_marginTop="55dp"
        android:text="Available?"/>

    <Button
        android:id="@+id/Sendavailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Navigate"
        android:layout_below="@+id/rg"
        android:text="Send Availiability"/>

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/textView2"
        android:layout_marginTop="23dp">

        <RadioButton
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="yes"/>

        <RadioButton
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="no"/>
    </RadioGroup>

    <Button
        android:id="@+id/maketeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Team"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Viewteam"
        android:layout_marginBottom="27dp"/>


</RelativeLayout>