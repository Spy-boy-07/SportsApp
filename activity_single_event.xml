<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    xmlns:tools="http://schemas.android.com/tools">


    <TextView
        android:id="@+id/Location"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Location"
        android:layout_below="@+id/Time"
        android:layout_alignStart="@+id/Time"/>

    <TextView
        android:id="@+id/Time"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignStart="@+id/Date"
        android:layout_below="@+id/Date"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Time"/>

    <TextView
        android:id="@+id/Day"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Day"
        android:layout_above="@+id/Time"
        android:layout_toEndOf="@+id/Location"
        android:layout_marginStart="126dp"/>

    <ImageView
        android:id="@+id/im_item_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@android:drawable/ic_menu_edit"
        android:tint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/im_item_icon"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="TiTle"/>

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:text="Date"
        android:layout_below="@+id/im_item_icon"
        android:layout_alignEnd="@+id/Title"/>

    <Button
        android:id="@+id/Navigate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Navigate"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/Viewteam"
        android:layout_alignEnd="@+id/Location"/>

    <Button
        android:id="@+id/Viewteam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Team"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/Navigate"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:text="Available?"
        android:layout_below="@+id/Location"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/Sendavailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Availiability"
        android:layout_above="@+id/Navigate"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"/>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_marginTop="23dp"
        android:id="@+id/rg">

        <RadioButton
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="yes"/>

        <RadioButton
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="no"/>
    </RadioGroup>


</RelativeLayout>